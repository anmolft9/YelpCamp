<%- include ('../partials/header') %>

<div class="container">
    <div class="container">
        <header class="jumbotron">
            <h1>Welcome to the Camping Sites</h1>
            <p>We have some of the beautiful campsites for you</p>
            <a class="btn btn-primary btn-lg" href="/campgrounds/new"> Add a new CampGround</a>
        </header>
    </div>

    <div class="row text-center" style="display:flex ; flex-wrap: wrap;">
        <%campgrounds.forEach(function(campground){%>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= campground.image %>">
                    <div class="caption">
                        <h4><%= campground.name %></h4>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">Info</a>
                    </div>
                    
                       
                </div>
                
            </div>
        <%});%>
    </div>
</div>

    


<%- include ('../partials/footer') %>